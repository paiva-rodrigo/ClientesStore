@page
@model DtinManager.Pages.Clientes.CreateModel
@{
}

<br />
<h2>New Client</h2>

@if (Model.errorMessage.Length>0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.clienteInfo.name" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Email</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="email" value="@Model.clienteInfo.email" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Phone</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="phone" value="@Model.clienteInfo.phone" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Adress</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="address" value="@Model.clienteInfo.address" />
		</div>
	</div>

	@if (Model.sucessMessage.Length > 0)
	{
		<div class='alert alert-warning alert-dismissible fade show' role='alert'>
			<strong>@Model.sucessMessage</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<td class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</td>

</form>


